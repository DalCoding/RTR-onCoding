<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signin_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:text="아이디"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signin_id_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#FF002E"
            android:visibility="invisible" />
    </LinearLayout>

    <EditText
        android:id="@+id/signin_id_edittext"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edge_white_item"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signin_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signin_pw_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="*비밀번호는 최소 8자리 이상 영어, 숫자, 특수 문자가 포함되어야 합니다."
            android:textColor="#A19E9E" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signin_pw_edittext"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signin_pwchecheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signin_pwcheck_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="'비밀번호 불일치'"
            android:textColor="#FF0000"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signin_pwcheck_edittext"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signin_nicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="닉네임"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/signin_nicname_edittext"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="닉네임을 입력해 주세요."
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signin_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/signin_number"
            android:layout_width="wrap_content"
            android:layout_height="36sp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="휴대전화 번호"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/signin_phone_button"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ripple_custom"
            android:text="인증번호 받기"
            android:textColor="@color/brown"
            android:textColorHighlight="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/signin_pin"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="인증번호 입력"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signin_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="이메일 주소"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signin_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="(선택)"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signin_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="이메일 주소를 입력해 주세요."
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>