<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myroadSearchListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box">

        <TextView
            android:id="@+id/myRoadSearchItemDtrTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:hint="도토리 이름"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myRoadSearchItemRoadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myRoadSearchItemDtrTitle"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:hint="길 제목"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myRoadSearchItemAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myRoadSearchItemRoadTitle"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:hint="주소"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>