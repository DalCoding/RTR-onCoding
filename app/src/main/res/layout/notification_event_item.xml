<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/notiEventImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/squirrel" />


        <TextView
            android:id="@+id/notiEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/notiEventImg"
            android:text="이벤트 정보"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notiEventContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notiEventTitle"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/notiEventImg"
            android:text="'제목(8글자)'에 정보추가를 남겼습니다."
            android:textSize="16sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>