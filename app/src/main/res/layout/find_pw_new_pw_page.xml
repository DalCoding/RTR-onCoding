<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/findpw_check_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="새로운 비밀번호 입력"
            android:textColor="#050505"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/findpw_check_edittext2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="   비밀번호 재입력"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/findpw_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/findpw_check_edittext2"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_drawable"
            android:text="확인" />

        <TextView
            android:id="@+id/findpw_check_ex"
            android:layout_width="305dp"
            android:layout_height="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="40dp"
            android:text="*비밀번호는 최소 8자리 영어, 숫자, 특수문자가 포함 되어야 합니다." />

        <TextView
            android:id="@+id/findpw_check_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="160dp"
            android:text="'비밀번호가 다릅니다.'"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/findpw_check_edittext1"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/edge_white_item"
            android:ems="10"
            android:hint="   비밀번호 입력"
            android:inputType="textPersonName" />
    </RelativeLayout>

</RelativeLayout>