<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_lines"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/mainExtendRoadImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bridge" />

    <LinearLayout
        android:id="@+id/mainExtendRoadContentsLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/mainExtendRoadImg"
        android:background="#F3F3F3"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/mainExtendRoadTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="제목"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mainExtendRoadPeriod"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="소요시간"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainExtendRoadUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/mainExtendRoadUserLevel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/graduationhat" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>