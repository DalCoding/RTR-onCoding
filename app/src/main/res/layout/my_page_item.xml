<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/myScrapCardView"
        android:layout_width="160dp"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/myScrabLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/myScrabImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    app:srcCompat="@drawable/black_scrap" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myScrabTitle"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="제목"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/myScrabSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:gravity="right"
                        android:text="20.12.28 저장"
                        android:textColor="#646464"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/myScrabPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:gravity="right"
                        android:text="서울시 양천구"
                        android:textColor="#646464"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/myScrabId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:gravity="right"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>