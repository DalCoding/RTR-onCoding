<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#5E000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/writeRoadTagHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="원하는 태그를 선택해주세요!"
                android:textColor="@color/brown"
                android:textSize="16sp" />

            <Button
                android:id="@+id/tagPlusBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/plusgray"
                android:gravity="center_vertical" />
        </LinearLayout>

        <GridView
            android:id="@+id/tagsList"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/writeRoadTagHead"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00EFEBDA" />
    </RelativeLayout>

</RelativeLayout>