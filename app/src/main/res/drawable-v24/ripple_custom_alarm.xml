<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#ACA7A3">
    <item android:id="@+id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:id="@+id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#EFEBDA"
                android:startColor="#EFEBDA"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</ripple>